<label>{{title}} <input name="{{name}}" value="{{default}}" /></label>
<script type="text/javascript">
    Object.defineProperty(window, '{{name}}', {
        get: function() {
            return form['{{name}}'].value;
        },
        set: function(value) {
            form['{{name}}'].value = value;
        }
    });
    console.log('{{name}} property defined');
</script>